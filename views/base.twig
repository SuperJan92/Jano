{% block html_head_container %}

{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}

	<body class="{{body_class}}" data-template="base.twig" style="background:#1b2430;">
		{{ function('wp_body_open') }}
		<a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>
		<header class="header fixed w-full flex h-24 px-12">
			{% block header %}
					<nav id="nav-main" class="nav-main text-white flex items-center" role="navigation">
						{% include "logo.twig" with {'items': menu.get_items} %}
						{% include "menu.twig" with {'items': menu.get_items} %}
					</nav><!-- #nav -->
			{% endblock %}
		</header>

		<div class="fixed inset-0 w-full h-full z-50 bg-[#101418]">
			<svg height="100" width="100" xmlns="http://www.w3.org/2000/svg" id="js-svg">
				<circle r="40" cx="50" cy="50" fill="#101418" stroke="#ff9d20" stroke-width="4" stroke-linecap="round" />
				<text x="50%" y="52%" text-anchor="middle" class="font-goldplay" fill="#ff9d20" stroke-width="3px" dy=".3em" style="font-size:60px;">J</text>
			</svg>
		</div>

		<section id="content" role="main" class="content-wrapper mx-auto flex justify-center items-start flex-col min-h-screen h-screen p-0 max-w-[790px]">
			{% block content %}
			{% endblock %}
		</section>


		{% block footer %}
			<footer id="footer">
				{% include 'footer.twig' %}
			</footer>
			{{ function('wp_footer') }}
		{% endblock %}


	</body>
</html>
